<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:GWallet.Frontend.XF"
             x:Class="GWallet.Frontend.XF.BalancesPage">
    <StackLayout x:Name="mainLayout"
                 Padding="0,0,0,0"
                 VerticalOptions="FillAndExpand">
        <Label Text="geewallet" x:Name="titleLabel"
               VerticalOptions="Start"
               HorizontalOptions="Center"
               Margin="0,40,0,0"
               FontAttributes="Bold" FontSize="Large" />
        <Label Text="..." x:Name="totalFiatAmountLabel"
               VerticalOptions="CenterAndExpand"
               HorizontalOptions="Center"
               Margin="0,20,0,20"
               FontSize="22" />
        <Label Text="www.diginex.com" x:Name="footerLabel"
               VerticalOptions="End"
               HorizontalOptions="Center"
               Margin="0,30,0,30" />
    </StackLayout>
</ContentPage>
